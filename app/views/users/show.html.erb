<h1>Hello <%= @user.email %>!</h1>

<div class="row">
<div class="col-md-6">
<div class= "category bg-success">
  <h2>My Favorite Recipes</h2>
  <% @recipes.each do |recipe| %>
  <%= link_to "#{recipe.title}", recipe_path(recipe)%>
  <br>
  <% end %>
  </div>
</div>

<div class="col-md-6">
  <div class= "category bg-success">
  <h2>Recipes I've Posted</h2>
  <% @recipes.each do |recipe| %>
  <%= recipe.title %>
  <%= link_to "edit", edit_recipe_path %>
  <%= link_to "delete", recipe_path, method: :delete, data: {confirm: 'Are you sure you want to delete this recipe?'} %>
  <br>
  <% end %>
  </div>
</div>
</div>
