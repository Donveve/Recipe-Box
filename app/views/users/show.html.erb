<h1>Hello, <%= @user.email %>!</h1>

<div class="row">
<div class="col-md-6">
<div class= "selection">
  <h2>My Favorite Recipes</h2>
  <% @user.favorites.each do |favorite| %>
  <%= link_to "#{favorite.recipe.title}", recipe_path(favorite.recipe)%>
  <br>
  <% end %>
  </div>
</div>

<div class="col-md-6">
  <div class= "selection">
  <h2>Recipes I've Posted</h2>
  <% @recipes.each do |recipe| %>
  <strong><%= link_to "#{recipe.title}", recipe_path(recipe) %></strong> |
  <%= link_to "edit", edit_recipe_path %> |
  <%= link_to "delete", recipe_path(recipe.id), method: :delete, data: {confirm: 'Are you sure you want to delete this recipe?'} %>
  <br>
  <% end %>
  </div>
</div>
</div>
