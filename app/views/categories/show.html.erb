<h1 class="text-center"> <%= @category.name %> Recipes</h1>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Difficulty</th>
    <th>Prep Time</th>
  </tr>


  <% @category.recipes.each do |recipe|%>
  <tr>
  <td><%= link_to "#{recipe.title}", %></td>
    <td><%= recipe.user.email%></td>
    <td><%= recipe.difficulty%></td>
    <td><%= recipe.prep_time%></td>
  </tr>
  <% end %>
</table>
